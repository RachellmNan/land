.container {
  display: flex;
  flex-direction: column;
  width: 240rpx;
  margin-left: 90rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 2rpx 10rpx 4rpx #eee;
}

.container image {
  width: 240rpx;
  height: 222rpx;
  overflow: hidden;
}

.container .bottom {
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx 15rpx 20rpx;
  background-color: #fff;
  color: #999;
  font-size: 22rpx;
}

.container .bottom text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.container .bottom .title {
  color: #4c4c4c;
  font-size: 32rpx;
}

.container .bottom .detail-wrapper {
  margin-top: 28rpx;
  text-align: right;
}

.container .bottom .detail-wrapper text {
  margin-left: 4rpx;
}
