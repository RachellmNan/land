.container {
  margin-left: 30rpx;
  display: flex;
  height: 40rpx;
  line-height: 40rpx;
  font-size: 20rpx;
}

.container .index-wrapper {
  margin-right: 14rpx;
}

.container .index-wrapper .index {
  font-size: 40rpx;
}

.container .date {
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  position: relative;
  min-width: 46rpx;
  font-size: 18rpx;
  text-align: center;
  padding-left: 14rpx;
  border-left: 2rpx solid #000;
}

.container .date .month {
  position: absolute;
  height: 20rpx;
  top: -8rpx;
}

.container .date .year {
  position: absolute;
  bottom: 12rpx;
  height: 20rpx;
}
