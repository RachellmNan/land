page {
  background-color: #f5f5f5;
  height: 100%;
}

.container .top {
  margin-bottom: 44rpx;
  position: relative;
}

.container .top .user-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.container .top .unlogin-wrapper {
  position: absolute;
  text-align: center;
  font-size: 24rpx;
  background-color: #fff;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  box-shadow: 2rpx 2rpx 10rpx 6rpx #f7f7f7;
}

.container .top .user-wrapper {
  position: absolute;
  width: 140rpx;
  height: 194rpx;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}

.container .top .user-wrapper .avatar-wrapper {
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 50%;
}

.container .top .user-wrapper .userNickName {
  margin-top: 10rpx;
  font-size: 20rpx;
  line-height: 20rpx;
}

.container .like-top {
  display: block;
  margin: auto;
  width: 80rpx;
  height: 36rpx;
  margin-bottom: 10rpx;
}
